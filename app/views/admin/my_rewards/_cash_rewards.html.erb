<h2 class="accordion-header" id="cash-reward-<%= locals[:section_name] %>">
  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-cash-reward-<%= locals[:section_name] %>" aria-expanded="false" aria-controls="collapse-cash-reward-<%= locals[:section_name] %>">
    Cash Rewards
  </button>
</h2>
<div id="collapse-cash-reward-<%= locals[:section_name] %>" class="accordion-collapse collapse" aria-labelledby="#cash-reward-<%= locals[:section_name] %>" data-bs-parent="#<%= locals[:section_name] %>">
  <div class="accordion-body">
    <%= render 'form', object: Reward.new(reward_type: :cash_rewards) %>
  </div>
</div>
