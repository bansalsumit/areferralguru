<div class="modal fade" id="emailPreviewModal" tabindex="-1" aria-labelledby="emailPreviewModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <ul class="row nav">
          <li class="col nav-item">
            <h1><%= email.name %></h1>
          </li>
          <li class="col nav-item">
            <img src="<%= public_url(email.get_logo) %>" class="logo"/>
          </li>
        </ul>
      </div>
      <div class="modal-body">
        <div class="row div_banner">
          <img src="<%= public_url(email.get_banner) %>" class="banner"/>
        </div>
        <div class="row">
          <p>hey <%= email.salutation %></p>
          <p><%= email.email_body %></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="filled-form-btn btn w85 form-button" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
